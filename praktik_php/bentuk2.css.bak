table{
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    border: 1px solid black;
}

th, td{
    text-align: left;
    padding: 16px;
}

tr:nth-child(even){
    background-color: white;
    border: 1px solid black;
}

.header{ 
    border : 1px solid #dedede; 
    padding : 40px; 
    margin : 0px; 
    background : #9E9AFB; 
} 
.footer{ 
    clear : both; 
    padding : 20px; 
    margin : 0px; 
    background : #9E9AFB; 
    
} 
h1{
    color: whitesmoke;
}
.container{ 
    max-width : 1500px; 
    margin : 20px auto; 
    background : #fff; 
    overflow : hidden; 
    padding : 10px; 
}